---
import "../components/GlobalStyles.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;

const DESC =
  "Przystępne i precyzyjne dokumenty prawne z pomocą wirtualnego prawnika! Generuj, podpisuj i przechowuj dokumenty prawne.";
const KEYWORDS = "umowa, dokument prawny, generuj umowę, generuj dokument";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/favicon/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/favicon/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/favicon/favicon-16x16.png"
    />
    <link rel="manifest" href="/favicon/site.webmanifest" />
    <link
      rel="mask-icon"
      href="/favicon/safari-pinned-tab.svg"
      color="#5bbad5"
    />
    <link rel="shortcut icon" href="/favicon/favicon.ico" />
    <meta name="msapplication-TileColor" content="#f5f3ee" />
    <meta name="msapplication-config" content="/favicon/browserconfig.xml" />
    <meta name="theme-color" content="#f5f3ee" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={DESC} />
    <meta name="keywords" content={KEYWORDS} />
    <meta property="og:site_name" content="Prawniczek" />
    <meta property="og:url" content="https://prawniczek.pl" />
    <meta property="og:type" content="website" />
    <meta name="title" property="og:title" content={title} />
    <meta name="image" property="og:image" content="/og.png" />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1024" />
    <meta property="og:image:height" content="706" />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    {
      import.meta.env.PROD && (
        <>
          <script
            defer
            data-domain="prawniczek.pl"
            src="https://plausible.io/js/script.js"
          />
          <script>
            (window as any).plausible = (window as any).plausible || function(){" "}
            {((window as any).plausible.q =
              (window as any).plausible.q || []).push(arguments)}
          </script>
        </>
      )
    }
  </body>
</html>
